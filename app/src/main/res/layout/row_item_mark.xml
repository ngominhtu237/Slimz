<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@drawable/bottom_gray_border">

    <TextView
        android:id="@+id/tvMarkWordName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="dictionary"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/btMarkStarYellow"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/circle_select_favorite_yellow"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btMarkStarBlue"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/circle_select_favorite_blue"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btMarkStarPink"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/circle_select_favorite_pink"
        android:visibility="gone"/>

</RelativeLayout>