<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#aa000000"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/optionBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icons_more_option_white"/>

            <com.samsung.lookup.view.CustomAutoCompleteTextView
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_margin="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_toEndOf="@+id/optionBtn"
                android:layout_toStartOf="@+id/maximizeBtn"
                android:dropDownWidth="wrap_content"
                android:dropDownVerticalOffset="0.5dp"
                android:completionThreshold="0"
                android:background="@color/translucentWhite"
                android:textColor="@color/white"
                android:textColorHint="@color/md_light_dividers"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/maximizeBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toStartOf="@id/closeBtn"
                android:layout_centerVertical="true"
                android:background="@mipmap/icons_maximize"/>

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icons_close_window"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/moveView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movePic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/move" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/resizeIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/icon_resize_corner"
        android:layout_gravity="right|bottom"/>
</merge>